{{#extend "body"}}
<!-- Page Content -->
  <script src="../javascripts/app.js"></script>
  <script src="../javascripts/tutor-dashboard.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.9.1/jquery.tablesorter.min.js"></script>
  <div class="container">
       <div class="row">
           <div class="col-md-3">
               <p class="lead">Hi {{tutor.user.firstName}} {{tutor.user.lastName}} </p>
               <div class="list-group">
                   <button onclick="wiseApp.tutorDashBoard.showUpcoming()" class="list-group-item active">Upcoming</button>
                   <button onclick="wiseApp.tutorDashBoard.showPast()" class="list-group-item">Past</button>
                   <button onclick="wiseApp.tutorDashBoard.showAvailabilty()" class="list-group-item">Availability</button>
                   <button onclick="wiseApp.tutorDashBoard.showSubjects()" class="list-group-item">Subjects</button>
                   <button onclick="wiseApp.tutorDashBoard.showProfile()" class="list-group-item">Profile</button>
               </div>
           </div>

           <div id="main-container" class="col-md-9">
              <div style="display : none;" id="availability">
                {{> availability tutor=tutor }}
              </div>
               <div style="display : none;" id="upcoming">
                 {{#if tutor.appointments.length}}
                     {{> upcoming tutor=tutor }}
                    {{else}}
                    <h1>No upcoming appointments</h1>
                  {{/if}}
               </div>

               <div style="display : none;" id="past">
                 {{> past tutor=tutor }}
               </div>

               <div style="display : none;" id= "profile">
                 {{> profile tutor=tutor  }}
               </div>

               <div style="display : none;" id="subjects">
                 {{> subjects tutor=tutor }}
               </div>

               <script type="text/javascript" >
                    // Default show upcoming
                    wiseApp.tutorDashBoard.showUpcoming();
               </script>
           </div>
       </div>
   </div>
   <!-- /.container -->
{{/extend}}

