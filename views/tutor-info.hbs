{{#extend "body"}}
  <div class="container row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="display-4 m-b-2"> Complete Your Registration</h1>

        <form method="POST" action="/tutors/tutor-info">
          <div class="form-group">
            <label for='program'>Program: </label>
            <input id='program' class='form-control' type='text' placeholder='Program' name='program'/>
          </div>
          <div class="form-group">
            <label for='description'>Description: </label>
            <input id='description' class='form-control' type='text' placeholder='Description' name='description'/>
          </div>
          <div class="form-group">
            <label for='contact'>Contact: </label>
            <input id='contact' class='form-control' type='text' placeholder='Contact' name='contact'/>
          </div>
          <div id="coursesForm" class="form-group">
            <label> Courses: </label>
            <button type="button" onclick="wiseApp.tutorInfoForm.addCourse()" class="btn inline btn-danger">Add</button>
          </div>
          <div class="form-group">
            <label for='rate'>Rate: </label>
            <input id='rate' class='form-control' type='rate' name='rate'/>
          </div>
          <button class="btn btn-primary btn-danger" type='submit'>Continue</button>
        </form>
      </div>
  </div>
{{/extend}}
